= render 'shared/main_header'
.main
  .main__visual
  .main__container
    %h2.main__container__head ピックアップカテゴリー
    = render partial: 'pickup_category', locals: { category: @categories[0], items: @ladies_items }
    = render partial: 'pickup_category', locals: { category: @categories[1], items: @mens_items }
    = render partial: 'pickup_category', locals: { category: @categories[2], items: @kids_items }
    = render partial: 'pickup_category', locals: { category: @categories[6], items: @cosmetics_items }
  .main__container
    %h2.main__container__head ピックアップブランド
    .main__container__item
      %h3.main__container__item__category
        = link_to "#" do
          .main__container__item__category__title シャネル新着アイテム
          .main__container__item__category__num
            - @chanel_items.each do |chanel_item|
              = render partial: 'share/item-link-card', locals: { item: chanel_item }
      .main__container__item__all
        = link_to "#" do
          %p.main__container__item__all__link 全ての商品を見る
    .main__container__item
      %h3.main__container__item__category
        = link_to "#" do
          .main__container__item__category__title ルイヴィトン新着アイテム
          .main__container__item__category__num
