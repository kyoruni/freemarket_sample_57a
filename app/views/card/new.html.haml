= render partial: 'share/simple-header'

= form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
  .payment-method
    .payment-method__contents
      .payment-method__contents__all-frame
        .payment-method__contents__all-frame__top-contents
          %h2 支払い方法
        .payment-method__contents__all-frame__bottom-contents
          .payment-method__contents__all-frame__bottom-contents__bottom-frame
            .payment-method__contents__all-frame__bottom-contents__bottom-frame__from
              %h4 
              カード番号
              %span.required> 必須
              = text_field_tag "number", "", class: "number card-number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
              = image_tag asset_path("visa.svg"),class:"card-image"
              = image_tag asset_path("master-card.svg"),class:"card-image"
              = image_tag asset_path("saison-card.svg"),class:"card-image"
              = image_tag asset_path("jcb.svg"),class:"card-image"
              = image_tag asset_path("american_express.svg"),class:"card-image"
              = image_tag asset_path("dinersclub.svg"),class:"card-image"
              = image_tag asset_path("discover.svg"),class:"card-image"
            .payment-method__contents__all-frame__bottom-contents__bottom-frame__expiration-date-form
              %p 
                有効期限
                %span.required> 必須
              .payment-method__contents__all-frame__bottom-contents__bottom-frame__expiration-date-form__text-date
                .payment-method__contents__all-frame__bottom-contents__bottom-frame__expiration-date-form__text-date__expiration-date
                  %select#exp_month{name: "exp_month", type: "text", class: "year"}
                    %option{value: ""} --
                    %option{value: "1"}01
                    %option{value: "2"}02
                    %option{value: "3"}03
                    %option{value: "4"}04
                    %option{value: "5"}05
                    %option{value: "6"}06
                    %option{value: "7"}07
                    %option{value: "8"}08
                    %option{value: "9"}09
                    %option{value: "10"}10
                    %option{value: "11"}11
                    %option{value: "12"}12
                %p.date 月

                .payment-method__contents__all-frame__bottom-contents__bottom-frame__expiration-date-form__text-date__expiration-date
                  %select#exp_year{name: "exp_year", type: "text", class: "year"}
                    %option{value: ""} --
                    %option{value: "2019"}19
                    %option{value: "2020"}20
                    %option{value: "2021"}21
                    %option{value: "2022"}22
                    %option{value: "2023"}23
                    %option{value: "2024"}24
                    %option{value: "2025"}25
                    %option{value: "2026"}26
                    %option{value: "2027"}27
                    %option{value: "2028"}28
                    %option{value: "2029"}29
                %p.date 年
              
            .payment-method__contents__all-frame__bottom-contents__bottom-frame__cord-from
              %h4 
              セキュリティコード
              %span.required> 必須
              = text_field_tag "cvc", "", class: "cvc card-number", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
            
            = link_to "#" , class: "reason-box" do
              %p カード裏面の番号とは？

            #card_token
            = submit_tag "追加する", id: "token_submit", class: "next__btn payment-method__contents__all-frame__bottom-contents__bottom-frame__next-btn"
= render 'share/simple-footer'